<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.rajni.hibernate.basics.beans">
	<class name="Book" table="BOOK">
		<id name="isbn" type="string" column="ISBN"></id>
		<property name="name" type="string" column="BOOK_NAME"></property>
		<property name="publishDate" type="date" column="PUBLISH_DATE"></property>
		<property name="price" type="integer" column="PRICE"></property>
	</class>
</hibernate-mapping>